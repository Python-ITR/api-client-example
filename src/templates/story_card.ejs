<div class="card-wrapper col-4 pl-1 pr-1 pt-3">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= title %></h5>
        <p class="card-text">
             <%= short_description %>
        </p>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>Широта:</b> <%= lat %></li>
            <li class="list-group-item"><b>Долгота:</b> <%= lng %></li>
          </ul>
        <a href="#" class="btn btn-primary">Show on map</a>
      </div>
    </div>
</div>
